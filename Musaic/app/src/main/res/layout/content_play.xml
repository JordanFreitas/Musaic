<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.uw.eduong.musaic.Play"
    tools:showIn="@layout/activity_play">

    <SeekBar
        android:id="@+id/seek"
        android:layout_below="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--<Button-->
        <!--android:id="@+id/play"-->
        <!--android:layout_below="@+id/albumArt"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->
    <Button
        android:id="@+id/pause"
        android:layout_below="@+id/albumArt"
        android:layout_toRightOf="@+id/back"
        android:layout_toEndOf="@+id/back"
        android:text="||"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/next"
        android:layout_below="@+id/albumArt"
        android:layout_toRightOf="@+id/pause"
        android:layout_toEndOf="@+id/pause"
        android:text=">"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/back"
        android:layout_below="@+id/albumArt"
        android:layout_toRightOf="@+id/repeat"
        android:layout_toEndOf="@+id/repeat"
        android:text="<"
        android:layout_width="50sp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/shuffle"
        android:layout_below="@+id/albumArt"
        android:layout_toRightOf="@+id/next"
        android:layout_toEndOf="@+id/next"
        android:layout_width="50sp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/repeat"
        android:layout_below="@+id/albumArt"
        android:layout_width="50sp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/lyrics"
        android:layout_toRightOf="@+id/album"
        android:layout_toEndOf="@+id/album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/wiki"
        android:layout_toRightOf="@+id/lyrics"
        android:layout_toEndOf="@+id/lyrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/albumArt"
        android:layout_below="@+id/songTitle"
        android:layout_width="400sp"
        android:layout_height="300sp" />
    <TextView
        android:id="@+id/album"
        android:layout_toRightOf="@+id/artist"
        android:layout_toEndOf="@+id/artist"
        android:layout_width="75sp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/artist"
        android:layout_width="75sp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/songTitle"
        android:layout_below="@+id/artist"
        android:layout_width="100sp"
        android:layout_height="50sp" />
    <TextView
        android:id="@+id/leftTimeDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/rightTimeDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
